# -*- python -*-

import os,os.path, sys
sys.path.append(os.path.join(os.getcwd(),'config'))
import atd_scons

def setup(env):
    prefix = env['OPT_PREFIX']
    env.AppendUnique (CPPPATH=[os.path.join(prefix,'include')])
    env.Append(LIBPATH= [os.path.join(prefix,'lib'),])

env = atd_scons.Pkg_Environment()
env.GlobalSetup ([setup, atd_scons.DebugSetup])
Export('env')
Help(atd_scons.Pkg_Options().GenerateHelpText(env))

SConscript("SConscript")
